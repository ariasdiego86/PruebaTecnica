generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuarios {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  password  String  // password encripted
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  resetPasswordToken String?  // Token para recuperar la password
  resetPasswordExpires DateTime? // Expiraci√≥n del token
}

